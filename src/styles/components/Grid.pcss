  .$(prefix)--grid-container.$(prefix)--grid-container__no-gutter-left {
    padding-right: 0;
    padding-left: 0;
  }

  .$(prefix)--grid-container {
    padding-right: var(--size-spacing-05);
    padding-left: var(--size-spacing-05);
  }
}

