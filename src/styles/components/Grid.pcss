/* span-16 */

.$(prefix)--grid-container[data-columncount="1"] > .$(prefix)--grid-col {
  grid-column: span 16;
}

/* span-8 */

@each $i in 2, 3 {
  .$(prefix)--grid-container[data-columncount="$(i)"] > .$(prefix)--grid-col {
    grid-column: span 8;
  }
}

/* span-4 */

